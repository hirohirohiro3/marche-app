rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Stores: Public Read (for customers to see event name), Write for Owner only
    match /stores/{storeId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == storeId;
      
      match /settings/{settingId} {
        allow read, write: if request.auth != null && request.auth.uid == storeId;
      }
    }

    // Menus: Public Read (for customers), Admin Write
    match /menus/{menuId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Orders: 
    // - Create: Authenticated users only (Anonymous or Registered)
    // - Get: Authenticated users only (Own order or Store Owner)
    // - List: Owner only (via storeId)
    // - Update/Delete: Owner only
    match /orders/{orderId} {
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      allow get: if isAuthenticated() && (resource.data.uid == request.auth.uid || resource.data.storeId == request.auth.uid);
      allow list: if request.auth != null && resource.data.storeId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.storeId == request.auth.uid;
    }

    // Option Groups: Public Read (for customers), Admin Write
    match /optionGroups/{optionGroupId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // System Settings (Order Numbers):
    // Authenticated users only (Anonymous or Registered)
    match /system_settings/{settingId} {
      allow read, write: if isAuthenticated();
    }

    // Default: Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}