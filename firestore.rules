rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Stores: Read for authenticated users, Write for Owner only
    match /stores/{storeId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == storeId;
    }

    // Menus: Public Read (for customers), Admin Write
    match /menus/{menuId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Orders: 
    // - Create: Public (for customers via QR code)
    // - Get: Public (for customers to view their order summary)
    // - List: Owner only (via storeId)
    // - Update/Delete: Owner only
    match /orders/{orderId} {
      allow create: if true;
      allow get: if true;
      allow list: if request.auth != null && resource.data.storeId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.storeId == request.auth.uid;
    }

    // System Settings (Order Numbers):
    // Public Read/Write required for client-side transaction in CheckoutPage
    match /system_settings/{settingId} {
      allow read, write: if true;
    }

    // Default: Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}