rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Menus: Public Read (for customers), Admin Write
    match /menus/{menuId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Orders: 
    // - Create: Public (for customers via QR code)
    // - Get: Public (for customers to view their order summary)
    // - List: Admin only (to view all orders)
    // - Update/Delete: Admin only
    match /orders/{orderId} {
      allow create: if true;
      allow get: if true;
      allow list: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }

    // System Settings (Order Numbers):
    // Public Read/Write required for client-side transaction in CheckoutPage
    match /system_settings/{settingId} {
      allow read, write: if true;
    }

    // Default: Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}